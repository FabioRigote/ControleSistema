@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}





<section class="h-100 gradient-form">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-white" style="background-color: #1e1e1e; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <img src="~/Images/ContatoFácil-removebg-preview.png" style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1" style="color: #f4f4f4;">Organize suas Conexões. Simplifique suas Relações</h4>
                                </div>

                                <form asp-controller="Login" asp-action="Entrar" method="post">
                                    <p style="color: #b5b5b5;">Acesse sua conta para gerenciar seus contatos com eficiência e segurança.</p>
                                    <div class="form-outline mb-4">
                                      
                                        <input type="email" asp-for="Email" id="email" class="form-control"
                                               placeholder="Digite seu email" style="background-color: #2c2c2c; color: #f4f4f4;" />
                                        <label class="form-label" for="email" style="color: #ffab00;">Email</label>
                                      
                                        @Html.ValidationMessageFor(x => x.Email)
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Senha" id="senha" class="form-control"
                                               placeholder="Digite sua senha" style="background-color: #2c2c2c; color: #f4f4f4;" />
                                        <label class="form-label" for="senha" style="color: #ffab00;">Senha</label>
                                        @Html.ValidationMessageFor(x => x.Senha)
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                                                style="background-color: #ffab00; border: none; box-shadow: 0 5px 10px rgba(255, 171, 0, 0.5); transition: transform 0.2s;">Entrar
                                        </button>
                                        <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold" style="color: #b5b5b5;">Esqueceu sua senha?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2" style="color: #ddd;">Não tem uma conta?</p>
                                        <a class="btn btn-outline-danger"
                                           style="border-color: #ffab00; color: #ffab00; transition: transform 0.2s;"
                                           asp-controller="Usuario" asp-action="Cadastro">
                                            Crie agora!
                                        </a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center" style="background-color: #2c2c2c;">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4" style="color: #ffab00;">Gerencie seus contatos de forma eficiente</h4>
                                <p class="small mb-0" style="color: #b5b5b5;">
                                    Nosso sistema foi desenvolvido para facilitar o gerenciamento dos seus contatos. Adicione, edite e apague informações de forma rápida e segura, mantendo tudo organizado em um só lugar. Acesse sua conta e comece a otimizar sua gestão de contatos agora mesmo.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

